# OS specific VARS
case "$OSTYPE" in
    darwin*)
        PATH="/Library/Frameworks/Python.framework/Versions/3.9/bin:${PATH}"
        EDITOR="bbedit"
    ;;
    linux*)
        EDITOR="vim"
esac

export PATH
export EDITOR

